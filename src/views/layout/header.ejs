                        <li>
                            <%
                            }
                            else
                            {
                            %>
                                <li>
                                    <a href="/login">Login</a>
                                </li>
                            <%
                            }
                            %>

                        <%if(locals.session.user != null) { %>

                            <li ng-controller="notificationCtrl" ng-init="init();getAlerts()" class="dropdown">
                                <a class="notifications-icon" href="#" ng-alerts-popover popover-placement="bottom-right" style="
                                    padding-top: 10px;
                                    padding-bottom: 4px;
                                ">
                                    <ng-alerts-count badge="true" hide-empty="true"> </ng-alerts-count>
                                                        <span class="fa-stack fa-1x notifications-icon">
                                                            <i class="fa fa-bell fa-stack-2x text-default" ng-class="{'faa-horizontal' : numNotifications > 0, 'animated' : numNotifications > 0}"></i>
                                                            <i class="fa fa-circle fa-stack-2x text-default badge-circle text-danger" ng-show="numNotifications > 0"></i>
                                                            <strong class="fa-stack-1x notifications-text badge-text"ng-show="numNotifications > 0">{{numNotifications}}</strong>
                                                        </span>
                                </a>
                                <div ng-repeat="notifUri in notifsUris">
                                    <div ng-init="get_notification_info(notifUri.uri)">
                                    </div>
                                </div>
