<div class="row">
    <div class="col-md-12">
        <div class="row" ng-show="(shared.metadata == null || shared.metadata.length == 0) && !showing_project_root()">
            <br/>
            <div class="col-xs-12">
                <div class="alert alert-info">
                    This resource does not have any metadata yet. Add new descriptors in edit mode.
                </div>
            </div>
        </div>

        <form id="metadataform" class="form-horizontal navbar-spacer" role="form">
            <div class="control-group" ng-repeat="descriptor in shared.metadata track by $index">
                <div ng-switch="descriptor.control">
                    <div ng-switch-when="input_box">
                        <ng-include src="'/app/views/projects/show/partials/controls_read_only/input_box.html'"></ng-include>
                    </div>
                    <div ng-switch-when="date_picker">
                        <ng-include src="'/app/views/projects/show/partials/controls_read_only/date_picker.html'"></ng-include>
                    </div>
                    <div ng-switch-when="map">
                        <ng-include src="'/app/views/projects/show/partials/controls_read_only/map.html'"></ng-include>
                    </div>
                    <div ng-switch-when="markdown_box">
                        <ng-include src="'/app/views/projects/show/partials/controls_read_only/markdown_box.html'"></ng-include>
                    </div>
                    <div ng-switch-when="url_box">
                        <ng-include src="'/app/views/projects/show/partials/controls_read_only/url_box.html'"></ng-include>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
